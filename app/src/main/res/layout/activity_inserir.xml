<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5177FF"
    tools:context=".TelaInserir">

    <Button
        android:id="@+id/bt_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#0021FF"
        android:text="@string/Voltar"
        android:textColor="#F4F0F0"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_inserir2" />

    <Button
        android:id="@+id/bt_inserir2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#0021FF"
        android:text="@string/Inserir"
        android:textColor="#F8F8F8"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_value" />

    <EditText
        android:id="@+id/et_value"
        android:layout_width="253dp"
        android:layout_height="75dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/Valor"
        android:textColor="#000000"
        android:selectAllOnFocus="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_product_id" />


    <Spinner
        android:id="@+id/s_product_id"
        android:layout_width="318dp"
        android:layout_height="68dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="89dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>